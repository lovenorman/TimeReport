@model TimeReportApp.Models.EditCustomerViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="card">
    <div class="card-header">
        <h1>Edit Customer</h1>
    </div>
    <div class=card-body>
        <form method="post">
            <div>
                <label asp-for="Name" asp-for="Name"></label>
                <input class="form-control" asp-for="Name"/>
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>
            <div>
                <label asp-for="Address" asp-for="Address"></label>
                <input class="form-control" asp-for="Address"/>
                <span asp-validation-for="Address" class="field-validation-error"></span>
            </div>
            <button type="submit" class="button">Save</button>
            
        
        </form>
        
            
    </div>
    
</div>
    
